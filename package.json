{
  "name": "vue3-autoform",
  "version": "1.0.0",
  "type": "module",
  "description": "Vue 3 AutoForm component that builds forms from JSON schema",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "dev-mobile": "vite --host 0.0.0.0 --port 5173",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "deploy": "npm run build && gh-pages -d dist",
    "predeploy": "npm run build"
  },
  "dependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node18": "^18.2.0",
    "@types/node": "^18.16.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.45.0",
    "eslint-plugin-vue": "^9.15.1",
    "gh-pages": "^6.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.6",
    "vite-plugin-vue-devtools": "^7.0.0",
    "vue-tsc": "^1.8.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "vue3",
    "autoform",
    "json-schema",
    "forms",
    "dynamic-forms",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AnnSyh/vue3-autoform"
  },
  "homepage": "https://AnnSyh.github.io/vue3-autoform",
  "bugs": {
    "url": "https://github.com/AnnSyh/vue3-autoform/issues"
  }
}
